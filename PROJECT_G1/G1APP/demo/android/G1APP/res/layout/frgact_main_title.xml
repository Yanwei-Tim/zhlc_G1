<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/top_title" >
    <Button 
        android:id="@+id/r_ib_title_left"
        android:layout_alignParentLeft="true"
	    style="@style/style_title_button"
	    android:drawableTop="@drawable/selector_frgact_main_title_left"
	    android:visibility="gone" />
	<TextView 
	    android:id="@+id/r_tv_title_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"
	    android:textColor="@android:color/white"
	    android:textSize="22sp" />
	<Button 
        android:id="@+id/r_ib_title_right"
        android:layout_alignParentRight="true"
	    style="@style/style_title_button"
	    android:drawableTop="@drawable/selector_frgact_main_title_right"
	    android:visibility="gone" />
	

</RelativeLayout>