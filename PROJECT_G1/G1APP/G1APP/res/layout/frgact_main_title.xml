<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@color/bb_cyan" >

    <ImageView
        android:id="@+id/r_ib_title_left"
        style="@style/style_title_iv"
        android:layout_alignParentLeft="true"
        android:src="@drawable/selector_frgact_main_title_back"
        android:visibility="gone" />

    <TextView
        android:id="@+id/r_tv_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/bb_white"
        android:textSize="@dimen/text_size_biggest" />

    <ImageView
        android:id="@+id/r_ib_title_right"
        style="@style/style_title_iv"
        android:layout_alignParentRight="true"
        android:src="@drawable/selector_frgact_main_title_track"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_title_right"
        style="@style/style_title_iv"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/tv_appstore_ava"
        android:drawablePadding="2dp"
        android:drawableRight="@drawable/act_appstore_rectangle"
        android:gravity="right|center_vertical"
        android:paddingBottom="2dp"
        android:paddingRight="15dp"
        android:text="500"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_big"
        android:visibility="gone" />

</RelativeLayout>