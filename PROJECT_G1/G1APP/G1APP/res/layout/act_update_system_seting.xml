<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dark"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" >

        <LinearLayout
            style="@style/mm"
            android:layout_width="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="@dimen/item_marginleft"
            android:layout_marginRight="@dimen/item_marginleft"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llyt_common_offline"
                style="@style/subset_item"
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_weight="1" >

                <TextView
                    style="@style/set_text"
                    android:layout_marginLeft="@dimen/item_marginleft"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:text="@string/offline_map_update" />

                <ImageButton
                    android:id="@+id/back_button"
                    style="@style/ww"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/act_set_go" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyt_common_Notice"
                style="@style/subset_item"
                android:layout_width="match_parent"
                android:layout_weight="1" >

                <TextView
                    style="@style/set_text"
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/item_marginleft"
                    android:layout_weight="1"
                    android:text="@string/System_Seting_Notice" />

                <ImageButton
                    android:id="@+id/back_button"
                    style="@style/ww"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/act_set_go" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyt_update_Warming"
                style="@style/subset_item"
                android:layout_width="match_parent"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/act_name_edit_bg" >

                <TextView
                    style="@style/set_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/System_Seting_Waring" />

                <ImageButton
                    android:id="@+id/back_button"
                    style="@style/ww"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/act_set_go" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyt_common_4GConnection"
                style="@style/subset_item"
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_weight="1" >

                <TextView
                    style="@style/set_text"
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/item_marginleft"
                    android:layout_weight="1"
                    android:text="@string/Notice_to_Net" />

                <SeekBar
                    android:id="@+id/sb_common_four_net"
                    style="@style/seekbar_subset"
                    android:layout_width="68dp"
                    android:progressDrawable="@drawable/selector_common_progessdrawable" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyt_common_WiFiNet"
                style="@style/subset_item"
                android:layout_width="match_parent"
                android:layout_marginTop="1dp"
                android:layout_weight="1" >

                <TextView
                    style="@style/set_text"
                    android:layout_marginLeft="@dimen/item_marginleft"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/Above_WiFi_Net"
                    android:textSize="@dimen/text_size_big" />

                <SeekBar
                    android:id="@+id/sb_common_WIFI_Net"
                    style="@style/seekbar_subset"
                    android:layout_width="68dp"
                    android:progressDrawable="@drawable/selector_common_progessdrawable" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyt_common_receivenews"
                style="@style/subset_item"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="0dp" >

                <TextView
                    style="@style/set_text"
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/item_marginleft"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/receiver_news_Message"
                    android:textSize="@dimen/text_size_big" />

                <SeekBar
                    android:id="@+id/sb_common_receivenews"
                    style="@style/seekbar_subset"
                    android:layout_width="68dp"
                    android:layout_weight="1"
                    android:progressDrawable="@drawable/selector_common_progessdrawable" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/System_aboutUs"
                style="@style/subset_item"
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:background="@drawable/act_name_edit_bg"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/back_button"
                    style="@style/ww"
                    android:layout_gravity="right"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/act_set_go" />

                <TextView
                    android:id="@+id/textView1"
                    style="@style/set_text"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-25dp"
                    android:text="@string/System_Aboutof_Us" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_Clean_Recley"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/act_pay_btn_nomar"
                android:text="@string/Clearn_Recley"
                android:textColor="@color/bb_white"
                android:textSize="@dimen/text_size_bigger" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>