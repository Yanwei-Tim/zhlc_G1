<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlyt_subset_loginout"
        android:layout_width="@dimen/dialog_connect_width"
        android:layout_height="@dimen/dialog_password_height"
        android:layout_gravity="center"
        android:background="@drawable/bg_change_password" >

        <TextView
            android:id="@+id/tv_password_dialog_title"
            style="@style/set_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/confire_last_password"
            android:textSize="@dimen/text_size_biggest" />

        <TextView
            android:id="@+id/tv_password_dialog_hint"
            style="@style/set_text"
            android:layout_below="@+id/tv_password_dialog_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/input_last_password"
            android:textColor="@color/bb_gray3"
            android:singleLine="true"
            android:textSize="@dimen/text_size_middle" />

        <EditText
            android:id="@+id/edit_subset_password"
            style="@style/ww"
            android:layout_width="@dimen/dialog_password_edit_width"
            android:layout_height="@dimen/dialog_password_edit_height"
            android:layout_below="@+id/tv_password_dialog_hint"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_change_password_edit"
            android:paddingLeft="5dp"
            android:textCursorDrawable="@drawable/password_cursor" />

        <LinearLayout
            style="@style/mw"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/password_marginbottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_subset_password_cancle"
                style="@style/set_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/cancle"
                android:textColor="#00a0e9"
                android:textSize="@dimen/text_size_bigger" />

            <TextView
                android:id="@+id/tv_subset_password_sure"
                style="@style/set_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text=" 确定"
                android:textColor="#00a0e9"
                android:textSize="@dimen/text_size_bigger" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>