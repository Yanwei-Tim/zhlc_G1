<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/r_rl_state"
        android:layout_width="@dimen/menuChildSize"
        android:layout_height="@dimen/menuChildSize"
        android:background="@drawable/state_battery_0" >

        <TextView
            android:id="@+id/r_tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/bb_white"
            android:textSize="@dimen/text_size_big"
            android:layout_centerInParent="true"
            android:paddingTop="3dp" />
    </RelativeLayout>

</LinearLayout>