<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlyt_subset_loginout"
        android:layout_width="@dimen/dialog_connect_width"
        android:layout_height="@dimen/dialog_upgrade_height"
        android:background="@drawable/home_history_066" >

        <TextView
            android:id="@+id/tv_dialog_title"
            style="@style/set_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/upgrade"
            android:textSize="@dimen/text_size_biggest" />

        <LinearLayout
            style="@style/mw"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_dialog_cancle"
                style="@style/set_text"
                android:layout_width="0dp"
                android:layout_height="@dimen/dialog_button_height"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:background="@drawable/selector_upgrade_left_button"
                android:gravity="center"
                android:text="@string/cancle"
                android:textColor="#29b76c"
                android:textSize="@dimen/text_size_biggest" />

            <TextView
                android:id="@+id/tv_dialog_sure"
                style="@style/set_text"
                android:layout_width="0dp"
                android:layout_height="@dimen/dialog_button_right_height"
                android:layout_marginLeft="-2dp"
                android:layout_weight="1"
                android:background="@drawable/selector_upgrade_right_botton"
                android:gravity="center"
                android:text="@string/sure"
                android:textColor="@color/bb_gray1"
                android:textSize="@dimen/text_size_biggest" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>