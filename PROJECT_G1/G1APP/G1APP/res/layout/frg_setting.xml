<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3F6"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbarStyle="outsideOverlay" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/Relatvelayout"
                style="@style/wrap_layout"
                android:layout_height="90dp" >

                <ImageView
                    android:id="@+id/iv_set_userhead"
                    style="@style/set_head"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/menu_head" />

                <LinearLayout
                    style="@style/ww"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/iv_set_carmoel"
                        style="@style/ww"
                        android:src="@drawable/car_09" />

                    <TextView
                        android:id="@+id/tv_set_carmodel"
                        style="@style/set_text"
                        android:layout_marginLeft="0dp"
                        android:text="奔驰" />
                </LinearLayout>

                <LinearLayout
                    style="@style/wm"
                    android:layout_above="@+id/tv_set_usertime"
                    android:layout_alignLeft="@+id/tv_set_usertime"
                    android:layout_alignTop="@+id/iv_set_userhead"
                    android:gravity="bottom"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_set_username"
                        style="@style/set_text"
                        android:layout_marginLeft="1dp"
                        android:text="超级大坏蛋"
                        android:textSize="@dimen/text_size_big" />

                    <TextView
                        android:id="@+id/tv_set_usersign"
                        style="@style/set_text"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="-2dp"
                        android:text="hello"
                        android:textColor="@color/bb_gray3"
                        android:textSize="@dimen/text_size_middle" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_set_usertime"
                    style="@style/set_text"
                    android:layout_alignBottom="@+id/iv_set_userhead"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/iv_set_userhead"
                    android:text="上次同步时间在14:30pm"
                    android:textColor="@color/bb_gray3"
                    android:textSize="@dimen/text_size_middle" />
            </RelativeLayout>

            <!-- 布局第一栏 -->
            <!-- 最外层圆角 -->

            <LinearLayout style="@style/wrap_layout" >

                <!-- 上圆角 -->


                <!-- 分割线 -->

                <View style="@style/bg_line" />
                <!-- 下圆角 -->

                <LinearLayout
                    android:id="@+id/i_ll_album"
                    style="@style/btn_layout"
                    android:layout_height="@dimen/set_item_height" >

                    <ImageView
                        style="@style/set_image"
                        android:src="@drawable/frg_set_album" />

                    <TextView
                        style="@style/set_text"
                        android:text="@string/album" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <ImageButton
                            android:layout_width="10dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/act_set_go" />
                    </LinearLayout>
                </LinearLayout>
                <!-- 布局第二栏 -->

                <View style="@style/bg_line" />
                <!-- 最外层圆角 -->


                <!-- 上圆角 -->

                <LinearLayout
                    android:id="@+id/i_ll_collect"
                    style="@style/btn_layout"
                    android:layout_height="@dimen/set_item_height" >

                    <ImageView
                        style="@style/set_image"
                        android:src="@drawable/act_update_collect" />

                    <TextView
                        style="@style/set_text"
                        android:text="@string/collect" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <ImageButton
                            android:layout_width="10dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/act_set_go" />
                    </LinearLayout>
                </LinearLayout>

                <!-- 分割线 -->

                <View style="@style/bg_line" />

                <LinearLayout
                    android:id="@+id/i_ll_set"
                    style="@style/btn_layout"
                    android:layout_height="@dimen/set_item_height" >

                    <ImageView
                        style="@style/set_image"
                        android:src="@drawable/act_update_seting" />

                    <TextView
                        style="@style/set_text"
                        android:text="@string/set" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <ImageButton
                            android:layout_width="10dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/act_set_go" />
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/bg_line" />

                <LinearLayout
                    android:id="@+id/i_ll_wifi"
                    style="@style/btn_layout"
                    android:layout_height="@dimen/set_item_height" >

                    <ImageView
                        style="@style/set_image"
                        android:src="@drawable/act_wifi_biao" />

                    <TextView
                        style="@style/set_text"
                        android:text="@string/Wifi_Fi" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <ImageButton
                            android:layout_width="10dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/act_set_go" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- 布局第三栏 -->


            <!-- 最外层圆角 -->

            <LinearLayout
                style="@style/wrap_layout_plus"
                android:visibility="gone" >

                <!-- 全圆角 -->

                <LinearLayout
                    android:id="@+id/i_ll_closesoftware"
                    style="@style/btn_layout" >

                    <TextView
                        style="@style/set_text"
                        android:text="关于我们" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <ImageButton
                            android:layout_width="10dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/act_set_go" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>